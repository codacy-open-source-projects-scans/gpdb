1:SET ROLE role_concurrency_test;
SET
1:CREATE TEMP TABLE tmp(a INT);
CREATE TABLE
2:SET ROLE role_concurrency_test;
SET
2:BEGIN;
BEGIN
1&:SELECT 1;  <waiting ...>
